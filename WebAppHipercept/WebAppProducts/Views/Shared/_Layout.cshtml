<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET MVC Products</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#DDDAEC">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#2C1E4E;">
        <a class="navbar-brand" href="#">Products</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("Administrator"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-item nav-link" href="~/Account/ListAccounts">Accounts</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-item nav-link" href="~/Products/ViewStock">Stock</a>
                    </li>
                }
                @if (User.IsInRole("User") || User.IsInRole("Administrator"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Requests
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (User.IsInRole("User"))
                            {
                                <a class="dropdown-item" href="~/Request/NewRequest">New</a>
                            }
                            <a class="dropdown-item" href="~/Request/RequestList">List</a>
                        </div>
                    </li>
                }

            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Products ASP.NET MVC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
